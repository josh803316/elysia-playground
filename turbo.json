{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**"],
      "env": [
        "CLERK_PUBLISHABLE_KEY",
        "CLERK_SECRET_KEY",
        "CLERK_JWT_KEY",
        "ADMIN_API_KEY",
        "PUBLIC_CLERK_PUBLISHABLE_KEY"
      ]
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": ["PORT", "VITE_API_URL"]
    },
    "lint": {}
  },
  "globalEnv": ["NODE_ENV"]
}
